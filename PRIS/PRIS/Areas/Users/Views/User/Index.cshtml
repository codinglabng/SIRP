
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Users/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<PRIS.Data.Models.App>
@using PRIS.Repositories;

<section class="content">

    <div class="container-fluid">
        <div class="block-header">
            <h2>Available Application for you</h2>
        </div>
        <!-- Basic Card -->
        <div class="row clearfix">
          @{foreach (var app in Model)
              {
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>
                           @app.Name <small>@app.Description</small>
                        </h2>
                        <ul class="header-dropdown m-r--5">
                            <li class="dropdown">
                                <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                    <i class="material-icons">more_vert</i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="javascript:void(0);">Action</a></li>
                                    <li><a href="javascript:void(0);">Another action</a></li>
                                    <li><a href="javascript:void(0);">Something else here</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                    <div class="body" style="margin-left: 90px">
                        <a href="@app.Url" class="text-center" target="_blank"><img src="~/Content/images/@app.Logo" class="img-rounded" width="100px" height="100px" /></a>
                    </div>
                </div>
            </div> 

                  }
              }


        </div>
        <!-- #END# Basic Card -->


            <div class="row clearfix">
                <!-- Task Info -->
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="card">
                        <div class="header">
                            <h2>Activity</h2>
                            <ul class="header-dropdown m-r--5">
                                <li class="dropdown">
                                    <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                        <i class="material-icons">more_vert</i>
                                    </a>
                                    <ul class="dropdown-menu pull-right">
                                        <li><a href="javascript:void(0);">Action</a></li>
                                        <li><a href="javascript:void(0);">Another action</a></li>
                                        <li><a href="javascript:void(0);">Something else here</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                        <div class="body">
                            <div class="table-responsive">
                                <table class="table table-hover dashboard-task-infos">
                                    <thead>
@{
    var actvities = new UserRepository().GetActivity().Take(5);
    if (actvities != null)
    {
        foreach (var actvity in actvities)
        {
                                        <tr>
                                            <th>#</th>
                                            <th>@actvity.AppId</th>
                                            <th>@actvity.Action</th>
                                            <th>@actvity.Date</th>
                                        </tr>
        }

    }
}
                                    </thead>
                                  
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- #END# Task Info -->
                
            </div>
 </section>

